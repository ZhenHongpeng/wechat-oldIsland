.container {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.header {
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 100rpx;
    align-items: center;
    justify-content: space-between;
    border-top: 1px solid #f5f5f5;
    border-bottom: 1px solid #f5f5f5;
}
.navi {
    position: absolute;
    bottom: 40rpx;
}

.like-container {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.share-btn {
    margin-top: 10rpx;
    margin-right: 30rpx;
}

.share {
    width: 40rpx;
    height: 40rpx;
}